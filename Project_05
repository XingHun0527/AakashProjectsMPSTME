Code for linking pages :

package com.example.thefoodiestores;

import android.app.Activity;
import android.content.ActivityNotFoundException;
import android.content.Context;
import android.content.Intent;
import android.net.Uri;
import android.os.Bundle;
import android.os.Handler;
import android.os.Message;
import android.os.Messenger;
import android.view.View;
import android.webkit.WebView;
import android.widget.Toast;

public class MainActivity extends Activity {

	

	@Override
	public void onCreate(Bundle savedInstanceState) {

		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_main);

		
	}

	public void secondscreen(View view) {
		
		Intent intent = new Intent(this, second_screen.class);
		startActivity(intent);
		

	}
	}

Code for linking to particular dishes :
package com.example.thefoodiestores;

import android.app.Activity;
import android.content.Intent;
import android.os.Bundle;
import android.view.View;

public class second_screen extends Activity{

	@Override
	protected void onCreate(Bundle savedInstanceState) {
		// TODO Auto-generated method stub
		super.onCreate(savedInstanceState);
		setContentView(R.layout.selectcuisine);
	}

	/**
	 * @param args
	 */
	
	
public void South(View view) {
		
		Intent intent = new Intent(this, south.class);
		startActivity(intent);
		

	}

public void maharashtra(View view) {
	
	Intent intent = new Intent(this, maharashtra.class);
	startActivity(intent);
	

}

public void punjabi(View view) {
	
	Intent intent = new Intent(this, punjabi.class);
	startActivity(intent);
	

}

public void gujrati(View view) {
	
	Intent intent = new Intent(this, gujrati.class);
	startActivity(intent);
	

}

}
